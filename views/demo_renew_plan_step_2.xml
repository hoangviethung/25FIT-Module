<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="demo_renew_plan_step_2" name="Demo Renew Plan Step 2">
        <t t-call="website.layout">
            <!-- SECTION CHECKOUT-->
            <section class="section-checkout-25fit">
                <form action="/demo-renew-plan-step-2">
                    <div class="container">
                        <div class="section-checkout-wrapper-25fit">
                            <div class="block-header-checkout-25fit">
                                <ul>
                                    <li>
                                        <a href="/demo-renew-plan-step-1">
                                            <i class="fa fa-chevron-left"></i>
                                            <span>/ Renew Plan</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="block-process-checkout-25fit">
                                <div class="list-process">
                                    <div class="process__item active">
                                        <div class="icon-wrapper">
                                            <div class="icon"></div>
                                        </div>
                                        <div class="text">Select Plan</div>
                                    </div>
                                    <div class="process__item active">
                                        <div class="icon-wrapper">
                                            <div class="icon"></div>
                                        </div>
                                        <div class="text">Payment</div>
                                    </div>
                                    <div class="process__item">
                                        <div class="icon-wrapper">
                                            <div class="icon"></div>
                                        </div>
                                        <div class="text">E-sign</div>
                                    </div>
                                </div>
                            </div>
                            <div class="checkout-wrapper-25fit">
                                <div class="left">
                                    <div class="block-your-checkout-information ">
                                        <div class="information-header">
                                            <div class="left">
                                                <div class="information-title">Your information</div>
                                                <a class="edit-information" href="#">
                                                    <i class="fa fa-pencil-square-o"></i>
                                                    <span>Not You?</span>
                                                </a>
                                            </div>
                                            <div class="right">
                                                <label class="checkbox__switch-label">
                                                    <span>Request Tax Invoice</span>
                                                    <label class="checkbox__switch">
                                                        <input type="checkbox" />
                                                        <div class="slider round"></div>
                                                    </label>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="information-body">
                                            <div class="informations">
                                                <div class="information__item">
                                                    <label>Customer:</label>
                                                    <span>Tien Le</span>
                                                </div>
                                                <div class="information__item">
                                                    <label>Phone No.:</label>
                                                    <span>+84 908 000 000</span>
                                                </div>
                                                <div class="information__item">
                                                    <label>Email:</label>
                                                    <span>tienvudesign@gmail.com</span>
                                                </div>
                                                <div class="information__item">
                                                    <label>Billing Address:</label>
                                                    <span>123 Truong Dinh, District 3, Ho Chi Minh City, Vietnam</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="block-payment-checkout-method">
                                        <div class="checkout-method-title">Payment Method</div>
                                        <div class="checkout-method-list">
                                            <div class="checkout-method__item">
                                                <label class="custom-control custom-radio">
                                                    <input class="custom-control-input" type="radio" hidden="hidden" name="paymentMethod" value="atm" checked="checked" />
                                                    <span class="custom-control-label">ATM Cards</span>
                                                </label>
                                            </div>
                                            <div class="checkout-method__item">
                                                <label class="custom-control custom-radio">
                                                    <input class="custom-control-input" type="radio" hidden="hidden" name="paymentMethod" value="international" />
                                                    <span class="custom-control-label">International Cards</span>
                                                </label>
                                            </div>
                                            <div class="checkout-method__item">
                                                <label class="custom-control custom-radio">
                                                    <input class="custom-control-input" type="radio" hidden="hidden" name="paymentMethod" value="visa" />
                                                    <span class="custom-control-label">Cards Visa/Master Cards</span>
                                                </label>
                                            </div>
                                            <div class="checkout-method__item">
                                                <label class="custom-control custom-radio">
                                                    <input class="custom-control-input" type="radio" hidden="hidden" name="paymentMethod" value="ewallets" />
                                                    <span class="custom-control-label">E-Wallets</span>
                                                </label>
                                            </div>
                                            <div class="checkout-method__item">
                                                <label class="custom-control custom-radio">
                                                    <input class="custom-control-input" type="radio" hidden="hidden" name="paymentMethod" value="qrpay" />
                                                    <span class="custom-control-label">QR Pay</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="right">
                                    <div class="block-your-order-25fit">
                                        <div class="title">Your Order</div>
                                        <div class="order-name-plan">
                                            <p>EMS Training</p>
                                            <h4>Gold - 06 Months</h4>
                                        </div>
                                        <div class="checkouts">
                                            <div class="checkout__item">
                                                <span>Subtotal:</span>
                                                <span>28,000,000 đ</span>
                                            </div>
                                            <div class="checkout__item">
                                                <span>Apply Discount:</span>
                                                <span>200,000 đ</span>
                                            </div>
                                        </div>
                                        <div class="checkout__item total">
                                            <span>Total</span>
                                            <span>28,000,000 đ</span>
                                        </div>
                                        <div class="checkout__actions">
                                            <button class="btn btn-primary">CHECKOUT</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </section>
            <!-- Droppable-area shared across all 25fit pages -->
            <t t-set="oe_structure_25fit_footer_description">Visible in all 25fit pages</t>
            <div class="oe_structure oe_empty" id="oe_structure_25fit_footer" t-att-data-editor-sub-message="oe_structure_25fit_footer_description"/>
        </t>
    </template>
</odoo>