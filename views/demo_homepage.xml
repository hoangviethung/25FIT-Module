<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="demo_homepage" name="Demo Home Page">
        <t t-call="website.layout">
            <div id="wrap">
                <t t-raw="0"/>
                <section class="swiper-fullpage-content">
                    <div class="swiper fullpageSwiper">
                        <div class="swiper-wrapper">
                            <div class="swiper-slide">
                                <div class="container">
                                    <div class="content-wrapper">
                                        <div class="image">
                                            <img src="/theme_25fit/static/src/images/model-fullpage-01.png" />
                                        </div>
                                        <div class="content">
                                            <div class="content__heading">
                                                <div class="icon">
                                                    <i class="fa fa-bolt"></i>
                                                </div>
                                                <h3>Nhanh</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="swiper-slide">Slide 8</div>
                            <div class="swiper-slide">Slide 9</div>
                        </div>
                        <div class="swiper-pagination"></div>
                    </div>
                </section>
                <!-- Droppable-area shared across all 25fit pages -->
                <t t-set="oe_structure_25fit_footer_description">Visible in all 25fit pages</t>
                <div class="oe_structure oe_empty" id="oe_structure_25fit_footer" t-att-data-editor-sub-message="oe_structure_25fit_footer_description"/>
            </div>
        </t>
    </template>
</odoo>