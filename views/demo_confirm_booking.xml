<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="demo_confirm_booking" name="Demo Confirm Booking">
        <t t-call="website.layout">
            <!-- SECTION SCHEDULE BOOKING-->
            <section class="section-confirm-booking-25fit">
                <div class="container">
                    <ul class="wizard wizard-25fit m-0 float-right">
                        <li>
                            <a class="text-success" href="/demo-schedule-booking">Booking</a>
                            <span class="chevron"></span>
                        </li>
                        <li>
                            <a class="text-success" href="/demo-booking-time">Time</a>
                            <span class="chevron"></span>
                            <span class="chevron"></span>
                        </li>
                        <li class="text-primary">Confirmation
                            <span class="chevron"></span>
                        </li>
                    </ul>
                    <div class="title-section-wrapper-25fit">
                        <h1 class="title-section">Confirm your details</h1>
                    </div>
                    <div class="confirm-booking-wrapper">
                        <form class="confirm-booking-form w-md-50" type="post" action="/demo-booking-details">
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">Your Name</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" placeholder="Your Name"/>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">Your Email</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" placeholder="Your Email"/>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">Your Phone</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" placeholder="Your Phone"/>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">Studio Address</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" placeholder="Studio Address"/>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">Note</label>
                                <div class="col-md-9">
                                    <textarea style="resize:none" class="form-control" rows="3" placeholder="Note"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="offset-md-8 col-md-4">
                                    <button type="submit" class="btn btn-primary">
                                        <span>Confirm Booking</span>
                                        <span class="fa fa-arrow-right"></span>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </section>

            <!-- Droppable-area shared across all 25fit pages -->
            <t t-set="oe_structure_25fit_footer_description">Visible in all 25fit pages</t>
            <div class="oe_structure oe_empty" id="oe_structure_25fit_footer" t-att-data-editor-sub-message="oe_structure_25fit_footer_description"/>
        </t>
    </template>
</odoo> 