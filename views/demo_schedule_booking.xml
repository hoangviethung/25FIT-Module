<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="demo_schedule_booking" name="Demo Schedule Booking">
        <t t-call="website.layout">
            <!-- SECTION SCHEDULE BOOKING-->
            <section class="section-schedule-booking-25fit">
                <div class="container">
                    <ul class="wizard wizard-25fit m-0 float-right">
                        <li class="text-primary">Booking
                            <span class="chevron"></span>
                        </li>
                        <li class="text-muted">Time
                            <span class="chevron"></span>
                        </li>
                        <li class="text-muted">Confirmation
                            <span class="chevron"></span>
                        </li>
                    </ul>
                    <div class="title-section-wrapper-25fit">
                        <h1 class="title-section">Schedule a Booking</h1>
                    </div>
                    <div class="schedule-booking-wrapper">
                        <form class="schedule-booking-form w-md-50" type="post" action="/demo-booking-time">
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">Booking Type</label>
                                <div class="col-md-9">
                                    <select class="form-control">
                                        <option disabled="1" selected="1"> -- Select a booking type -- </option>
                                        <option>At Home</option>
                                        <option>At Studio</option>
                                        <option>Virtual Training</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">City</label>
                                <div class="col-md-9">
                                    <select class="form-control">
                                        <option disabled="1" selected="1"> -- Select a city -- </option>
                                        <option>Thành phố Hà Nội</option>
                                        <option>Thành phố Hồ Chí Minh</option>
                                        <option>Bình Dương</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">Districts</label>
                                <div class="col-md-9">
                                    <select class="form-control">
                                        <option disabled="1" selected="1"> -- Select a district -- </option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="calendarType" class="col-md-3 col-form-label location_label">Location</label>
                                <div class="col-md-9">
                                    <select class="form-control" id="calendarType" required="1">
                                        <option disabled="1" selected="1"> -- Select a location -- </option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="offset-md-8 col-md-4">
                                    <button type="submit" class="btn btn-primary">
                                        <span>View Availabilities</span>
                                        <span class="fa fa-arrow-right"></span>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="schedule-booking-wrapper">
                        <div class="schedule-booking-header">
                            <div class="schedule-booking-title">Next booking schedule</div>
                        </div>
                        <div class="schedule-booking-body">
                            <div class="list-your-booking">
                                <div class="booking__item">
                                    <table>
                                        <tr>
                                            <td>Booking ID</td>
                                            <td>BO30518</td>
                                        </tr>
                                        <tr>
                                            <td>When</td>
                                            <td>Fri Feb 11, 2022, 12:30:00 PM</td>
                                        </tr>
                                        <tr>
                                            <td>Status</td>
                                            <td>Reserved</td>
                                        </tr>
                                        <tr>
                                            <td>Studio</td>
                                            <td>Studio Lý Thường Kiệt, Hà Nội</td>
                                        </tr>
                                        <tr>
                                            <td>Address</td>
                                            <td>01 Lý Thường Kiệt, Phường Đồng Xuân, Quận Hoàn Kiếm, Thành phố Hà Nội</td>
                                        </tr>
                                        <tr>
                                            <td>Note</td>
                                            <td>Tập luyện với cường độ nặng</td>
                                        </tr>
                                    </table>
                                    <div class="booking-item-actions">
                                        <a class="btn btn-danger m-0" role="button" href="#">
                                            <i class="fa fa-fw fa-times"></i>
                                            <span>Cancel</span>
                                        </a>
                                        <a class="btn btn-success m-0" role="button" href="#">
                                            <i class="fa fa-fw fa-check"></i>
                                            <span>Checkin</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Droppable-area shared across all 25fit pages -->
            <t t-set="oe_structure_25fit_footer_description">Visible in all 25fit pages</t>
            <div class="oe_structure oe_empty" id="oe_structure_25fit_footer" t-att-data-editor-sub-message="oe_structure_25fit_footer_description"/>
        </t>
    </template>
</odoo>